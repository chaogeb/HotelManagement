<Window x:Class="HotelManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagementSystem"
        mc:Ignorable="d"
        Title="Hotel Management System" SizeToContent="WidthAndHeight" MinWidth="800" MinHeight="450">
    <Grid Background="#FFE5E5E5">
        <TextBlock Name="TimeBlock" Loaded="ShowTimeBlock" Margin="700,10,0,0">00:00:00</TextBlock>
        <ProgressBar Name="TimeProgressBar" Maximum="160" Height="5" VerticalAlignment="Top" IsIndeterminate="False"></ProgressBar>
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinHeight="400" MinWidth="750" Margin="0,3,0,0">

            <TabItem x:Name="HallTab" Header="大厅" VerticalAlignment="Bottom" Width="130" Height="29">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

            <TabItem x:Name="NewReservationTab" Header="预订" Width="130">
                <Grid x:Name="CustomerTab" Background="#FFE5E5E5">
                    <TabControl x:Name="BookingTab" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinHeight="370" MinWidth="750">
                        <TabItem x:Name="AvailabilityTab" Header="查询可用房间" VerticalAlignment="Bottom" Width="100" Height="25">
                            <Grid Background="#FFE5E5E5">
                                <DockPanel Margin="0,0,0,37" LastChildFill="True">
                                    <StackPanel Orientation="Vertical" MinWidth="200">
                                        <StackPanel Orientation="Horizontal" Margin="0,10">
                                            <Label x:Name="FromDateLabel" Content="入住日期：" Margin="10,10,5,0" Width="70"/>
                                            <DatePicker x:Name="AvailabilityFromDateDpr" Margin="0,10,0,0" Width="115"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label x:Name="ToDateLabel" Content="离店日期：" Margin="10,0,5,0" Width="70"/>
                                            <DatePicker x:Name="AvailabilityToDateDpr" Margin="0,0,0,0" Width="115"/>
                                        </StackPanel>
                                        <StackPanel Height="25" Orientation="Horizontal" Margin="0,10">
                                            <Label Content="房间类型：" Margin="10,0,5,0"/>
                                            <ComboBox x:Name="RoomTypeCombo" Width="115"/>
                                        </StackPanel>
                                        <Button x:Name="AvailabilityCheckBtn" Content="查找空闲房间" Margin="10,0,0,0" Width="185" Click="CheckAvailabilityBtn_Click" Height="27"/>
                                    </StackPanel>
                                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,10">
                                        <ListView x:Name="RoomsListView" SelectionChanged="RoomsListView_SelectionChanged">
                                            <ListView.View>
                                                <GridView>
                                                    <GridViewColumn Width="70" Header="房间号" DisplayMemberBinding="{Binding RoomNum}"  />
                                                    <GridViewColumn Width="80" Header="房间类型" DisplayMemberBinding="{Binding RType}"  />
                                                    <GridViewColumn Width="50" Header="价格" DisplayMemberBinding="{Binding Price}"  />
                                                    <GridViewColumn Width="75" Header="状态" DisplayMemberBinding="{Binding RStatus}"  />
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </Grid>
                                </DockPanel>
                                <Button x:Name="AvailabilityNextBtn" Content="下一步" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height ="29" Width="100" Margin="0,0,10,10" Click="GoToCustomerDetailsBtn_Click"/>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="CustomerDetailsTab" Header="旅客信息" Width="100">
                            <Grid Background="#FFE5E5E5">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="600" Height="300">
                                    <StackPanel Orientation="Vertical" MinWidth="380">
                                        <StackPanel Orientation="Horizontal">
                                            <Label x:Name="CustomerDetailsEmailLbl" Content="电子邮件：" Margin="60,16,5,0" Width="70"/>
                                            <TextBox x:Name="CustomerDetailsEmailTbx" Height="23" Margin="0,16,0,0" TextWrapping="Wrap" Width="238"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label x:Name="CustomerDetailsNameLbl" Content="姓名：" Margin="84,8,5,0" Width="46"/>
                                            <TextBox x:Name="CustomerDetailsNameTbx" Height="23" Margin="0,8,0,0" TextWrapping="Wrap" Width="238" IsEnabled="False"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label x:Name="CustomerDetailsCreditCardNoLbl" Content="身份证：" Margin="72,8,5,0" Width="58"/>
                                            <TextBox x:Name="CustomerDetailsCreditCardNoTbx" Height="23" Margin="0,8,0,0" TextWrapping="Wrap" Width="238" IsEnabled="False"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label x:Name="CustomerDetailsPhoneNumberLbl" Content="联系电话：" HorizontalAlignment="Left" Margin="60,8,5,0" Width="70"/>
                                            <TextBox x:Name="CustomerDetailsPhoneNoTbx" Height="23" Margin="0,8,0,0" TextWrapping="Wrap" Width="238" IsEnabled="False"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label x:Name="CustomerDetailsPhoneNumberLbl_Copy" Content="国际区号(+xx)：" Margin="31,8,5,0" Width="99"/>
                                            <TextBox x:Name="CustomerDetailsPhoneCountryCodeTbx" Height="23" Margin="0,8,0,0" TextWrapping="Wrap" Width="40" IsEnabled="False"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <CheckBox x:Name="CustomerDetailsRegisterChx" Content="注册新顾客" Height="23" Margin="10,88,0,0" Width="185" Checked="CheckBoxRegister_Checked" Unchecked="CheckBoxRegister_Unchecked"/>
                                        <Button x:Name="CustomerDetailsSearchBtn" Content="搜索" Height="27" Margin="10,8,0,0" Width="185" Click="SearchBtn_Click"/>
                                    </StackPanel>
                                </StackPanel>
                                <Button x:Name="BackReservation" Content="返回" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="29" Width="100" Margin="10,0,0,10" Click="BackToAvailibiltyBtn_Click"/>
                                <Button x:Name="NextReservationButton" Content="下一步" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="29" Width="100" Margin="0,0,10,10" Click="GoToReceiptBtn_Click"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="生成订单" Width="100">
                            <Grid Background="#FFE5E5E5"/>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <TabItem x:Name="CheckInCheckOutTab" Header="入住/退房" Width="130">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

            <TabItem x:Name="RegistryTab" Header="记录查询" Width="130">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
