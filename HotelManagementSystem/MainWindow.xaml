<Window x:Class="HotelManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagementSystem"
        mc:Ignorable="d"
        Title="Hotel Management System" SizeToContent="WidthAndHeight" MinWidth="800" MinHeight="450">
    <Grid ShowGridLines="True">
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinHeight="400" MinWidth="750">
            <TabItem x:Name="CheckInCheckOutTab" Header="入住/离店" VerticalAlignment="Bottom" Width="130" Height="29">
                
            </TabItem>
            <TabItem x:Name="NewReservationTab" Header="预订" Width="130" Height="29">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="RegistryTab" Header="记录查询" Width="130" Height="29">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
